<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/restaurant"
        android:alpha=".50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_baseline_food_bank_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/welcome"/>


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>

     <ImageView
            android:id="@+id/twitter_login_btn"
            android:src="@drawable/fui_ic_twitter_bird_white_24dp"

            android:layout_width="35dp"
            android:layout_height="35dp"
         android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toStartOf="@id/facebook_button"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            app:layout_constraintBottom_toBottomOf="parent"
         tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/facebook_button"
            android:src="@drawable/ic_baseline_facebook_24"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/twitter_login_btn"
            app:layout_constraintTop_toTopOf="@id/twitter_login_btn"
            app:layout_constraintBottom_toBottomOf="@id/twitter_login_btn"
            app:layout_constraintEnd_toStartOf="@id/google_button"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/google_button"
            android:layout_width="35dp"
            android:src="@drawable/google"
            android:layout_height="35dp"
            app:layout_constraintEnd_toStartOf="@id/email_button"
            app:layout_constraintStart_toEndOf="@id/facebook_button"
            app:layout_constraintTop_toTopOf="@id/twitter_login_btn"
            app:layout_constraintBottom_toBottomOf="@id/twitter_login_btn"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/email_button"
            android:src="@drawable/ic_baseline_alternate_email_24"
            app:layout_constraintStart_toEndOf="@id/google_button"
            app:layout_constraintTop_toTopOf="@id/twitter_login_btn"
            app:layout_constraintBottom_toBottomOf="@id/twitter_login_btn"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>